    <div class="row mt-5">
        <div class="col">
            <h3 class="text-center">Letras que não existem na palavra</h3>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <input class="letter-wrong" type="checkbox" value="a">a
            <input class="letter-wrong" type="checkbox" value="b">b
            <input class="letter-wrong" type="checkbox" value="c">c
            <input class="letter-wrong" type="checkbox" value="d">d
            <input class="letter-wrong" type="checkbox" value="e">e
            <input class="letter-wrong" type="checkbox" value="f">f
            <input class="letter-wrong" type="checkbox" value="g">g
            <input class="letter-wrong" type="checkbox" value="h">h
            <input class="letter-wrong" type="checkbox" value="i">i
            <input class="letter-wrong" type="checkbox" value="j">j
            <input class="letter-wrong" type="checkbox" value="k">k
            <input class="letter-wrong" type="checkbox" value="l">l
            <input class="letter-wrong" type="checkbox" value="m">m
            <input class="letter-wrong" type="checkbox" value="n">n
            <input class="letter-wrong" type="checkbox" value="o">o
