            <input class="letter-wrong" type="checkbox" value="q">q
            <input class="letter-wrong" type="checkbox" value="r">r
            <input class="letter-wrong" type="checkbox" value="s">s
            <input class="letter-wrong" type="checkbox" value="t">t
            <input class="letter-wrong" type="checkbox" value="u">u
            <input class="letter-wrong" type="checkbox" value="v">v
            <input class="letter-wrong" type="checkbox" value="w">w
            <input class="letter-wrong" type="checkbox" value="x">x
            <input class="letter-wrong" type="checkbox" value="y">y
            <input class="letter-wrong" type="checkbox" value="z">z
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-auto">
            <button type="submit" id="submit" class="btn btn-primary">Enviar</button>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-auto">
            <table>
                <thead>
                    <tr>
                        <th colspan="8" class="text-center">Possibilidades</th>
                    </tr>
                </thead>
                <tbody id="possibilities">
