<body>
    <div class="row">
        <div>
            <h1 class="text-center">Word Picker</h1>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <h3 class="text-center">Letras na posição correta (colocar em ordem)</h3>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <input type="text" class="letter-box-match" maxlength="1" id="0">
        </div>
        <div class="col-auto">
            <input type="text" class="letter-box-match" maxlength="1" id="1">
        </div>
        <div class="col-auto">
            <input type="text" class="letter-box-match" maxlength="1" id="2">
        </div>
        <div class="col-auto">
            <input type="text" class="letter-box-match" maxlength="1" id="3">
        </div>
        <div class="col-auto">
            <input type="text" class="letter-box-match" maxlength="1" id="4">
        </div>
    </div>

    <div class="row mt-5">
        <div class="col">
            <h3 class="text-center">Letras que existem na palavra</h3>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <input type="text" class="letter-box-guess" maxlength="1" id="0">
        </div>
        <div class="col-auto">
            <input type="text" class="letter-box-guess" maxlength="1" id="1">
        </div>
        <div class="col-auto">
            <input type="text" class="letter-box-guess" maxlength="1" id="2">
        </div>
        <div class="col-auto">
            <input type="text" class="letter-box-guess" maxlength="1" id="3">
        </div>
        <div class="col-auto">
            <input type="text" class="letter-box-guess" maxlength="1" id="4">
        </div>
    </div>
    
